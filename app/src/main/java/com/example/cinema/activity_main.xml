<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="false"
    android:background="@drawable/image6"
    android:clipChildren="false"
    android:focusable="auto"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible" >
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="cursive"
        android:layout_marginTop="110dp"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/user_name_ans"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="cursive"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/black"
        android:textCursorDrawable="@color/black"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/password_ans"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:password="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Remember Me"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold|italic" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/card_1"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/material_on_background_disabled"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/log_in_button">

            <TextView
                android:id="@+id/sign_in_box"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:fontFamily="cursive"
                android:text="Sign In"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/facebook"
            tools:src="@drawable/facebook" />
        <TextView
            android:id="@+id/or"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Or "
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold|italic" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/gmail"
            tools:src="@drawable/gmail" />
    </LinearLayout>
    <TextView
        android:id="@+id/create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:text="No Account Yet? Create an Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
</LinearLayout>