<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#455A64"
      android:fontFamily="cursive"
      android:gravity="center"
      android:text="Payment"
      android:textColor="@color/white"
      android:textSize="40sp" />

  <Button
      android:id="@+id/btnBuy"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="40dp"
      android:layout_marginBottom="10dp"
      android:background="#455A64"
      android:text="Book Now"
      android:textColor="@android:color/white" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="65dp"
      android:layout_marginTop="90dp"
      app:srcCompat="@drawable/visa" />

  <EditText
      android:id="@+id/e1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40dp"
      android:layout_marginTop="280dp"
      android:ems="10"
      android:hint="Card Number"
      android:inputType="number"
      android:textColor="@color/black" />

  <EditText
      android:id="@+id/e2"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40dp"
      android:layout_marginTop="340dp"
      android:ems="10"
      android:hint="Expiration Date"
      android:inputType="date"
      android:textColor="@color/black" />

  <EditText
      android:id="@+id/e3"
      android:layout_width="147dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="240dp"
      android:layout_marginTop="340dp"
      android:ems="10"
      android:hint="CVV"

      android:inputType="number"
      android:textColor="@color/black" />

  <EditText
      android:id="@+id/e4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40dp"
      android:layout_marginTop="400dp"
      android:ems="10"
      android:hint="Postal Code"

      android:inputType="number"
      android:textColor="@color/black" />

  <EditText
      android:id="@+id/e5"
      android:layout_width="120dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40dp"
      android:layout_marginTop="460dp"
      android:ems="10"
      android:hint="CountryCode "
      android:inputType="number"
      android:textColor="@color/black" />

  <EditText
      android:id="@+id/e6"
      android:layout_width="217dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="170dp"
      android:layout_marginTop="460dp"
      android:ems="10"
      android:hint="Mobile Phone"

      android:inputType="phone"
      android:textColor="@color/black" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40dp"
      android:layout_marginTop="520dp"
      android:ems="10"
      android:inputType="number"
      android:text="SMS is required on this number"
      android:textColor="#9e9fb1"
      android:textSize="18dp" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="140dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40dp"
      android:layout_marginTop="580dp"
      android:ems="10"
      android:inputType="number"
      android:text="For Fawry Pay"
android:textColor="@color/black"      android:textSize="18dp" />

  <Button
      android:id="@+id/faw"
      android:layout_width="110dp"
      android:layout_height="50dp"
      android:layout_marginLeft="190dp"
      android:layout_marginTop="570dp"
      android:background="@drawable/fa"></Button>

</RelativeLayout>